<div class="container mt-5 mb-5">
  <h2>Edit article</h2>
</div>

<div class="container">
  <%= form_for :article, url: article_path(@article), method: :put do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text %>
    </p>

    <%= f.submit 'Edit article', class: 'btn btn-primary mt-3' %>
  <% end %>
</div>
