<div class="container mt-5 mb-5">
  <h2>New article</h2>
</div>

<div class="container">
  <%= form_for :article, url: articles_path do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :text %><br>
      <%= f.text_area :text %>
    </p>

    <%= f.submit class: 'btn btn-primary mt-3' %>
  <% end %>
</div>
